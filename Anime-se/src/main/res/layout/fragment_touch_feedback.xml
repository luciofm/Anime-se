<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context=".TouchFeedbackActivity$PlaceholderFragment">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:text="Sem transição"
            android:id="@+id/textView"/>

    <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/facebook_selector"
            android:button="@android:color/transparent"
            android:checked="true"
            android:clickable="true"
            android:layout_marginTop="16dp"
            android:id="@+id/btnFace"/>

    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="@drawable/button_blue"
            android:padding="8dp"
            android:textColor="@android:color/white"
            android:text="New Button"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:textColor="@android:color/white"
            android:text="Com transição entre estados"
            android:id="@+id/textView2"/>

    <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="@drawable/facebook_selector_fade"
            android:button="@android:color/transparent"
            android:checked="true"
            android:clickable="true"
            android:id="@+id/btnFace"/>

    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="@drawable/button_blue_fade"
            android:padding="8dp"
            android:textColor="@android:color/white"
            android:text="New Button"/>

</LinearLayout>
